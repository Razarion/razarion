<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.btxtech.scenariongui.ScenarioGuiController">
    <top>
        <ToolBar prefWidth="600.0" BorderPane.alignment="CENTER">
            <items>
