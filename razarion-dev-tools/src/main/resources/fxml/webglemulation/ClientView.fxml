<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.btxtech.webglemulator.ClientViewController">
    <top>
        <ToolBar prefWidth="600.0" BorderPane.alignment="CENTER">
            <Slider fx:id="zoomSlider" majorTickUnit="10.0" max="30.0" min="-10.0" minorTickCount="1" prefHeight="14.0"
                    prefWidth="79.0" showTickLabels="true" showTickMarks="true"/>
            <Button mnemonicParsing="false" onAction="#onZoomResetButton" text="1:1"/>
            <TextField fx:id="scaleField" editable="false" prefWidth="50.0"/>
            <TextField fx:id="mouseLabel" prefHeight="25.0" prefWidth="90.0"/>
        </ToolBar>
    </top>
    <center>
        <AnchorPane fx:id="anchorPanel" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Canvas fx:id="canvas" height="200.0" onMouseDragged="#onMouseDragged" onMouseMoved="#onMouseMoved"
                    onMouseReleased="#onMouseReleased" onScroll="#onScroll"
                    width="200.0"/>
        </AnchorPane>
    </center>
</BorderPane>
