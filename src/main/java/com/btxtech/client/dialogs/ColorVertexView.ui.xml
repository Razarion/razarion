<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p1='urn:import:com.btxtech.client.dialogs'>
    <ui:style>
        .numberInput  {
            width:50px;
        }
    </ui:style>

    <g:Grid cellPadding="5" cellSpacing="5">
        <g:row>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="0.1" ui:field="xField" />
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="0.1" ui:field="yField" />
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="0.1" ui:field="zField" />
            </g:customCell>
            <g:customCell>
                <p1:InputColor ui:field="color"/>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>