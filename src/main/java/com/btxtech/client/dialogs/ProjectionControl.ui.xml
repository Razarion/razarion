<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p1='urn:import:com.btxtech.client.dialogs'>
    <ui:style>
        .numberInput {
            width: 50px;
        }
    </ui:style>

    <g:Grid cellPadding="5" cellSpacing="5">
        <g:row>
            <g:customCell>
                <g:InlineHTML text="fovY (field of view) [Degrees]"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="1.0" ui:field="fovY"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:InlineHTML text="Aspect ratio"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="0.001" ui:field="aspectRatio"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:InlineHTML text="Z near"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="0.001" ui:field="zNear"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:InlineHTML text="Z far"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" step="0.001" ui:field="zFar"/>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>