<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:p1='urn:import:com.btxtech.client.dialogs'>
    <ui:style>
        .numberInput  {
            width:50px;
        }
    </ui:style>
    <g:Grid cellPadding="5" cellSpacing="5">
        <g:row>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c1r1"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c2r1"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c3r1"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c4r1"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c1r2"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c2r2"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c3r2"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c4r2"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c1r3"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c2r3"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c3r3"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c4r3"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c1r4"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c2r4"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c3r4"/>
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" ui:field="c4r4"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:InlineHTML text="Step" />
            </g:customCell>
            <g:customCell>
                <p1:InputNumber styleName="{style.numberInput}" min = "0" value="0.01" step="0.01" ui:field="step"/>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>