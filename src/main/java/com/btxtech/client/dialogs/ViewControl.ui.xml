<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p1='urn:import:com.btxtech.client.dialogs'>
    <ui:style>
        .numberInput {
            width: 50px;
        }
    </ui:style>

    <g:HorizontalPanel>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:InlineHTML text="Translate x"/>
                </g:customCell>
                <g:customCell>
                    <p1:InputNumber styleName="{style.numberInput}" step="10" ui:field="translateX"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:InlineHTML text="Translate y"/>
                </g:customCell>
                <g:customCell>
                    <p1:InputNumber styleName="{style.numberInput}" step="10" ui:field="translateY"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:InlineHTML text="Translate z"/>
                </g:customCell>
                <g:customCell>
                    <p1:InputNumber styleName="{style.numberInput}" step="10" ui:field="translateZ"/>
                </g:customCell>
            </g:row>
        </g:Grid>
        <p1:VerticalInputRangeNumber min="0" max="90" ui:field="rotateX"/>
        <g:VerticalPanel spacing="5">
            <g:Button text="Top" ui:field="topButton"/>
            <g:Button text="Front" ui:field="frontButton"/>
            <g:Button text="Game" ui:field="gameButton"/>
        </g:VerticalPanel>
    </g:HorizontalPanel>

</ui:UiBinder>