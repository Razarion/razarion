<module rename-to="razarion_client">
    <source path="client" />
    <source path="shared" />

    <inherits name="org.jboss.errai.enterprise.CDI" />
    <inherits name="org.jboss.errai.enterprise.Jaxrs" />
    <inherits name="org.jboss.errai.ui.DataBindingUIExtensions" />
    <inherits name="org.jboss.errai.ui.UI" />
    <inherits name="org.jboss.errai.ui.nav.Navigation" />

    <!--<inherits name="org.jboss.errai.ui.Cordova" />-->
    <inherits name="elemental.Elemental"/>
    <inherits name='com.btxtech.Razarion-Share'/>
    <inherits name='com.btxtech.Razarion-Ui-Service'/>

    <!--<replace-with class="org.jboss.errai.demo.client.local.Config">-->
        <!--<when-type-is class="org.jboss.errai.bus.client.framework.Configuration" />-->
    <!--</replace-with>-->

    <!--<set-property name="phonegap.logging.consoleHandler"-->
                  <!--value="DISABLED" />-->

    <set-property name="gwt.logging.enabled" value="TRUE"/>
    <set-property name="gwt.logging.logLevel" value="WARNING"/>
    <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED" />
    <!-- Uncomment the line below to enable all logging statements (default
      level is "INFO"). -->
    <!-- <set-property name="gwt.logging.logLevel" value="ALL"/> -->
    <set-property name="compiler.emulatedStack" value="true"/>
    <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true"/>
    <set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true"/>
    <set-property name="compiler.useSourceMaps" value="true" />
</module>
